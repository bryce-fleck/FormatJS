{
  "name": "react-intl-example-translations",
  "version": "1.0.0",
  "description": "React Intl Translations Example",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "npm run bundle && npm run translate",
    "bundle": "mkdirp build && browserify src/client/index.js -d -t babelify -t browserify-shim -o build/bundle.js",
    "translate": "babel-node scripts/translate.js",
    "start": "node src/server/index.js"
  },
  "author": "Eric Ferraiuolo <edf@ericf.me>",
  "license": "BSD-3-Clause",
  "dependencies": {
    "babel": "^5.8.21",
    "express": "^4.13.3",
    "glob": "^5.0.14",
    "react": "^0.14.0-beta3",
    "react-dom": "^0.14.0-beta3"
  },
  "devDependencies": {
    "babel-plugin-react-intl": "^1.0.0-beta-1",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "browserify-shim": "^3.8.10",
    "intl-messageformat-parser": "^1.1.0",
    "mkdirp": "^0.5.1"
  },
  "browser": {
    "react-intl": "../../lib/react-intl.js"
  },
  "browserify-shim": {
    "react": "global:React",
    "react-dom": "global:React"
  }
}
